[Unit]
Description=MedGemma Backend API Service
After=network.target

[Service]
Type=simple
User=psingh
WorkingDirectory=/home/psingh/medgemma/medgemma-app
Environment="PATH=/home/psingh/medgemma/medgemma-app/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/psingh/medgemma/medgemma-app/venv/bin/python3 /home/psingh/medgemma/medgemma-app/backend/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

